<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Bottom Sheets -->

    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
    </style>

    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
        <item name="behavior_draggable">true</item>
        <item name="behavior_peekHeight">400dp</item>
        <item name="backgroundTint">?colorSurface</item>
    </style>

    <!--Dialogs-->

    <style name="ThemeOverlay.MyTheme.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyTheme.Rounded</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.AlertDialog</item>
    </style>

    <!--Toolbar-->

    <style name="Widget.MyTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:background">?colorSurface</item>
        <item name="colorControlNormal">?colorOnSurface</item>
        <item name="titleTextColor">?colorOnSurface</item>
        <item name="subtitleTextColor">?colorSecondary</item>
        <item name="elevation">@dimen/toolbar_elevation</item>
    </style>

    <style name="Widget.MyTheme.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:background">?colorSurface</item>
    </style>

    <style name="Widget.MyTheme.Toolbar.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?colorOnSurface</item>
    </style>

    <!--Solid Buttons-->

    <style name="Widget.MyTheme.Button" parent="Widget.MaterialComponents.Button">
        <!--Your custom button style here-->
    </style>

    <!--Outlined Buttons-->

    <style name="Widget.MyTheme.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <!--Your custom button style here-->
    </style>

    <!--Text Buttons-->

    <style name="Widget.MyTheme.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <!--Your custom button style here-->
    </style>

</resources>
